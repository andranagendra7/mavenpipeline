#!/usr/bin/env groovy

pipeline {

     agent any
     
     stages {
         
           stage('check') {
               steps {
                        echo "Check docker service status"
                        sh 'docker --version'
                      }
                  }
           
           stage('Prodection') {
               steps {
                        echo "Check docker service status"
                        sh 'systemctl status docker.service'
                      }
                  }
           
             }
}
