#!/usr/bin/env groovy

pipeline {

     agent any
     
     stages {
         
           stage('check') {
               steps {
                        echo "Check docker service status"
                        sh 'docker --version'
                        sh 'docker build -t httpdimage .'
                      }
                  }
           
           stage('Prodection') {
               steps {
                        echo "Check docker service status"
                        sh 'systemctl status docker.service'
                      }
                  }
          
           stage('container creation') {
               steps {
                        echo "Check docker service status"
                        sh 'docker run -ti --name jenkinscon1 -p 98:80 httpdimage /bin/bash'
                      }
                  }
             }
}
